@model TipoCuenta
@{
    ViewData["Title"] = "Crear Tipo Cuenta";
}

<h1>Crear Tipo de Cuenta</h1>
<h5>El tipo cuenta se refiere a como podemos agruapar cuentas.
    Ejemplos: Prestamos, tarjetas de credito, etc.
</h5>
<div asp-validation-summary="ModelOnly" class="text-danger"></div>
<form asp-action="Crear">
    <div class="mb-3">
        <label asp-for="Nombre" class="form-label"></label>
        <input type="text" asp-for="Nombre" class="form-control"/>
        <span asp-validation-for="Nombre" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="UsuarioId" class="form-label"></label>
        <input type="text" asp-for="UsuarioId" class="form-control" />
        <span asp-validation-for="UsuarioId" class="text-danger"></span>
    </div>

    
    <button type="submit" class="btn btn-primary">Enviar</button>
</form>